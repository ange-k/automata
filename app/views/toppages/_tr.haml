%tr{ id: "tr-#{index}-#{tw.id}"}
  %td
    = index + 1
  %td
    %a{ href: tw.link, target: '_blank' }
      = tw.id
  %td
    = tw.popular.last.popular
  %td
    - # 改行コードのスプリット
    - tw.text.split(/\R/).each do |s|
      = s
      %br
  %td
    = tw.tweet_at.strftime("%Y-%m-%d %H:%M:%S")
  %td.word-break
    %ul
      - tw.urls.split(',').each do |url|
        %li
          %a{ href: url, target: '_blank' }
            = url
  %td
    %ul
      予想
      %li
        = tw.category.name
      %li
        = tw.score
    %ul
      実際
      %li
        - if tw.correct.blank?
          = '-'
        - else
          = tw.correct.name
  %td
    = select_tag :tweet_category,
      options_from_collection_for_select(@categories, :id, :name),
        multiple: true, onchange: "send_correct_category(this, #{tw.id}, #{index}, '#{toppages_category_url}');"